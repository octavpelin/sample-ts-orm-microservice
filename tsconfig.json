{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2017",
        "outDir": "./dist",
        "baseUrl": "./src",
        "moduleResolution": "Node",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}